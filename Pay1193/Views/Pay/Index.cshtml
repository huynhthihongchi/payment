@model IEnumerable<PayIndexViewModel>

@{
    ViewBag.Title = "Payment Records";
}
<div class="row">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Payment Record List</li>
                </ol>
            </nav><br />
            <div class="row">
                <a class="btn btn-xs btn-outline-success float-md-right"
                   asp-controller="Pay" asp-action="Create">Create Payment Record</a>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Pay Date</th>
                            <th>Month</th>
                            <th>Tax Year</th>
                            <th>Total Earnings</th>
                            <th>Total Deductions</th>
                            <th>Net Pay</th>
                            <th class="text-warning">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id">@item.FullName</a>
                                </td>
                                <td>
                                    @item.DatePay.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @item.MonthPay
                                </td>
                                <td>
                                    @item.TaxYear
                                </td>
                                <td>
                                    @item.TotalEarnings
                                </td>
                                <td>@item.TotalDeduction</td>
                                <td>@item.NetPayment</td>
                                <td>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>