@model PayCreateViewModel
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Pay" asp-action="Index">Payment Record List</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">New Payment Record</li>
                </ol>
            </nav><br />
            <form method="post" asp-controller="Pay" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.EmployeeId"></label>

                    <select asp-for="@Model.EmployeeId" class="form-control" asp-items="@ViewBag.employees">

                        <option selected>--- Select Employee ---</option>
                    </select>
                    <span asp-validation-for="Employee" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="MonthPay"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select type="text" class="form-control" asp-for="MonthPay">
                            <option selected>-- Select Month ---</option>
                            <option>January</option>
                            <option>February</option>
                            <option>March</option>
                            <option>April</option>
                            <option>May</option>
                            <option>June</option>
                            <option>July</option>
                            <option>August</option>
                            <option>September</option>
                            <option>October</option>
                            <option>November</option>
                            <option>December</option>
                        </select>
                        <span asp-validation-for="MonthPay" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="TaxYearId"></label>

                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="TaxYearId" class="form-control" asp-items="@ViewBag.taxYear">
                            <option selected>--- Select Tax Year ---</option>
                        </select>
                        <span asp-validation-for="TaxYearId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="DatePay"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DatePay" class="form-control" />
                        <span asp-validation-for="DatePay"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="HourlyRate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="HourlyRate" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="HourlyRate"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="HourWorked"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="HourWorked" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="HourWorked"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="ContractualHours"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="ContractualHours" class="form-control" />
                        <span asp-validation-for="ContractualHours"></span>
                    </div>
                </div><br /><br />
                <div class="form-group">

                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-calculator" style="margin-right:0.7em"></i>Compute & Save</button>
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back to Pay List</a>
                    <br />
                    <br />
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_validationScriptsPartial");
    }
}